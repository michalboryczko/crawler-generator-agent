{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "selector_agent_output",
  "title": "SelectorAgent Output Contract",
  "description": "Output from the Selector Agent - CSS selectors with success rates",
  "type": "object",
  "required": [
    "listing_selectors",
    "detail_selectors",
    "article_selector",
    "listing_container_selector",
    "collected_article_urls"
  ],
  "properties": {
    "listing_selectors": {
      "type": "object",
      "description": "Selector chains for listing pages with success rates",
      "required": [
        "listing_container",
        "article_link"
      ],
      "properties": {
        "listing_container": {
          "$ref": "#/$defs/selectorChain"
        },
        "article_link": {
          "$ref": "#/$defs/selectorChain"
        }
      },
      "additionalProperties": {
        "$ref": "#/$defs/selectorChain"
      }
    },
    "detail_selectors": {
      "type": "object",
      "description": "Selector chains for article detail pages with success rates",
      "properties": {
        "title": {
          "$ref": "#/$defs/selectorChain"
        },
        "date": {
          "$ref": "#/$defs/selectorChain"
        },
        "authors": {
          "$ref": "#/$defs/selectorChain"
        },
        "content": {
          "$ref": "#/$defs/selectorChain"
        },
        "lead": {
          "$ref": "#/$defs/selectorChain"
        },
        "category": {
          "$ref": "#/$defs/selectorChain"
        },
        "tags": {
          "$ref": "#/$defs/selectorChain"
        },
        "files": {
          "$ref": "#/$defs/selectorChain"
        },
        "images": {
          "$ref": "#/$defs/selectorChain"
        }
      },
      "additionalProperties": {
        "$ref": "#/$defs/selectorChain"
      }
    },
    "article_selector": {
      "type": "string",
      "description": "Primary CSS selector for article links (highest success rate from listing_selectors.article_link)"
    },
    "article_selector_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Success rate of the primary article selector"
    },
    "listing_container_selector": {
      "type": "string",
      "description": "Primary CSS selector for listing container (highest success rate)"
    },
    "collected_article_urls": {
      "type": "array",
      "description": "All article URLs discovered during selector extraction",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "selector_analysis": {
      "type": "string",
      "description": "Human-readable summary of selector discovery process"
    },
    "pages_analyzed": {
      "type": "object",
      "description": "Statistics about pages analyzed",
      "properties": {
        "listing_pages": {
          "type": "integer",
          "description": "Number of listing pages analyzed"
        },
        "article_pages": {
          "type": "integer",
          "description": "Number of article pages analyzed"
        }
      }
    },
    "agent_response_content": {
      "type": "string",
      "description": "Natural language summary of the agent's response, explaining key findings and decisions in human-readable form"
    }
  },
  "$defs": {
    "selectorChain": {
      "type": "array",
      "description": "Ordered list of selectors by success rate (highest first)",
      "items": {
        "type": "object",
        "required": [
          "selector",
          "success_rate"
        ],
        "properties": {
          "selector": {
            "type": "string",
            "description": "CSS selector string"
          },
          "success_rate": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Proportion of pages where this selector found content"
          },
          "found_on_pages": {
            "type": "integer",
            "description": "Number of pages where this selector matched"
          },
          "notes": {
            "type": "string",
            "description": "Optional notes about this selector"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
