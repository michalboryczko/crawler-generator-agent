# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-5.1
OPENAI_TEMPERATURE=0.0

# Chrome DevTools Configuration
CDP_HOST=localhost
CDP_PORT=9222
CDP_TIMEOUT=30

# Output Configuration
PLANS_OUTPUT_DIR=./plans_output
PLANS_TEMPLATE_DIR=./templates

# Logging Configuration
LOG_LEVEL=INFO                              # Minimum log level (DEBUG, INFO, WARNING, ERROR)
SERVICE_NAME=crawler-agent                  # Service name for logs

# Console Output
LOG_CONSOLE=true                            # Enable console output
LOG_COLOR=true                              # Enable colored console (disable in CI/CD)

# JSON Lines Output (local file logging)
LOG_JSONL=true                              # Enable JSON Lines output
LOG_JSONL_PATH=                             # JSON Lines file path (auto-generated if empty)
LOG_JSONL_ASYNC=true                        # Enable async buffered writing
LOG_DIR=./logs                              # Directory for log files

# OpenTelemetry Export (when infrastructure is running)
LOG_OTEL=false                              # Enable OpenTelemetry export
LOG_OTEL_ENDPOINT=localhost:4317            # OTLP gRPC endpoint (host:port, no http://)
LOG_OTEL_INSECURE=true                      # Use insecure (non-TLS) connection

# Event Sampling (for high-volume production)
LOG_SAMPLING=false                          # Enable event sampling
LOG_SAMPLING_RATE=1.0                       # Global sampling rate (0.0-1.0)

# PII Redaction
LOG_REDACT_PII=true                         # Enable PII redaction
